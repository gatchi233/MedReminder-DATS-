<?xml version="1.0" encoding="utf-8" ?>
<pages:AuthPage
    x:Class="MedReminder.Pages.Desktop.FloorPlanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MedReminder.Pages"
    xmlns:vm="clr-namespace:MedReminder.ViewModels"
    Title="Floor Plan"
    BackgroundColor="{StaticResource Floorplan_Main_Background}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="OnLogoutClicked" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <!-- Whole page -->
    <Grid Padding="16"
          ColumnDefinitions="3*,2*"
          RowDefinitions="Auto,*"
          ColumnSpacing="16"
          RowSpacing="12">

        <!-- ===== Left top: Floor controls ===== -->
        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8" VerticalOptions="Center">

            <!-- 1/F Â· 2/F segmented toggle -->
            <Grid ColumnDefinitions="*,*" WidthRequest="112">

                <Border Grid.Column="0" HeightRequest="28" Padding="0" StrokeThickness="0"
                        BackgroundColor="{StaticResource Button_Cancel}">
                    <Border.StrokeShape><RoundRectangle CornerRadius="4,0,4,0"/></Border.StrokeShape>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding Floor}" Value="1">
                            <Setter Property="BackgroundColor" Value="{StaticResource Alert_Info}"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Label Text="1/F" FontSize="11" FontAttributes="Bold"
                           TextColor="{StaticResource Button_Font_Primary}"
                           VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFloor1Clicked"/>
                    </Border.GestureRecognizers>
                </Border>

                <Border Grid.Column="1" HeightRequest="28" Padding="0" StrokeThickness="0"
                        BackgroundColor="{StaticResource Button_Cancel}">
                    <Border.StrokeShape><RoundRectangle CornerRadius="0,4,0,4"/></Border.StrokeShape>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding Floor}" Value="2">
                            <Setter Property="BackgroundColor" Value="{StaticResource Alert_Info}"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Label Text="2/F" FontSize="11" FontAttributes="Bold"
                           TextColor="{StaticResource Button_Font_Primary}"
                           VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFloor2Clicked"/>
                    </Border.GestureRecognizers>
                </Border>

            </Grid>

            <Label Text="{Binding SelectedRoomTitle}"
                   FontAttributes="Bold"
                   FontSize="13"
                   TextColor="{StaticResource Floorplan_Font_Primary}"
                   VerticalOptions="Center"
                   Margin="8,0,0,0" />
        </HorizontalStackLayout>

        <!-- ===== Right top: Title ===== -->
        <Label Grid.Row="0" Grid.Column="1"
               Text="Residents in selected room"
               FontAttributes="Bold"
               FontSize="13"
               TextColor="{StaticResource Floorplan_Font_Primary}"
               VerticalOptions="Center" />

        <!-- ===== Left: Rooms grid ===== -->
        <CollectionView Grid.Row="1" Grid.Column="0"
                        ItemsSource="{Binding Rooms}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedRoom}">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:RoomTile">
                    <Border Padding="10"
                            Margin="6"
                            StrokeThickness="1"
                            Stroke="{StaticResource Floorplan_Card_Border}"
                            BackgroundColor="{StaticResource Floorplan_Card_Background}"
                            HeightRequest="82">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="BackgroundColor" Value="{StaticResource Button_View}"/>
                                <Setter Property="Stroke" Value="{StaticResource Button_View}"/>
                            </DataTrigger>
                        </Border.Triggers>

                        <Grid RowDefinitions="Auto,*">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{Binding RoomLabel}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Floorplan_Font_Primary}">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="TextColor" Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Label Text="{Binding KindShort}"
                                       FontSize="12"
                                       TextColor="{StaticResource Floorplan_Font_Primary}"
                                       VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="TextColor" Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </HorizontalStackLayout>

                            <Label Grid.Row="1"
                                   Text="{Binding OccupancyText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Floorplan_Font_Primary}"
                                   LineBreakMode="TailTruncation">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="TextColor" Value="White"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ===== Right: Residents panel ===== -->
        <Border Grid.Row="1" Grid.Column="1"
                StrokeThickness="1"
                Stroke="{StaticResource Floorplan_Card_Border}"
                BackgroundColor="{StaticResource Floorplan_Card_Background}"
                Padding="12">

            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="6">
                <Label Text="{Binding SelectedRoomTitle}"
                       FontAttributes="Bold"
                       FontSize="13"
                       TextColor="{StaticResource Floorplan_Font_Primary}" />
                <BoxView Grid.Row="1" HeightRequest="1" Color="{StaticResource Floorplan_Card_Border}" Margin="0,0,0,4"/>

                <CollectionView Grid.Row="2"
                                ItemsSource="{Binding SelectedResidents}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10"
                                    Margin="0,0,0,10"
                                    StrokeThickness="1"
                                    Stroke="{StaticResource Floorplan_Card_Border}"
                                    BackgroundColor="{StaticResource Floorplan_Card_Background}">

                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           FontSize="14"
                                           TextColor="{StaticResource Floorplan_Font_Primary}" />

                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="{Binding Gender}"
                                               FontSize="12"
                                               TextColor="{StaticResource Floorplan_Font_Primary}" />
                                        <Label Text="{Binding AgeText}"
                                               FontSize="12"
                                               TextColor="{StaticResource Floorplan_Font_Primary}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnResidentTapped" />
                                </Border.GestureRecognizers>

                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>
        </Border>

    </Grid>
</pages:AuthPage>
