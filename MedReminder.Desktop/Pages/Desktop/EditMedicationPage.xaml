                    <Label Grid.Column="0" Text="" />
                    <Label Grid.Column="1" Text="" />
                    <RadioButton x:Name="Radio1Time" Grid.Column="2" Content="1 time" GroupName="TimeFrequency" CheckedChanged="OnTimeFrequencyChanged" HorizontalOptions="Center" />
                    <Label Grid.Column="3" Text="" />
                    <RadioButton x:Name="Radio2Times" Grid.Column="4" Content="2 times" GroupName="TimeFrequency" CheckedChanged="OnTimeFrequencyChanged" HorizontalOptions="Center" />
                    <Label Grid.Column="5" Text="" />
                    <RadioButton x:Name="Radio3Times" Grid.Column="6" Content="3 times" GroupName="TimeFrequency" IsChecked="True" CheckedChanged="OnTimeFrequencyChanged" HorizontalOptions="Center" />
