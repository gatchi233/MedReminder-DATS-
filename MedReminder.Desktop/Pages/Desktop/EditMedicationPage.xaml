<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MedReminder.Pages.Desktop.EditMedicationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="EditMedPage"
    Title="Medication"
    BackgroundColor="{StaticResource Medication_Main_Background}">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <Label x:Name="ResidentHeaderLabel"
                   Text="Medication for"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Medication_Font_Primary}" />

            <Label Text="Medication Details"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Medication_Font_Primary}" />

            <!-- Medication name -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Medication name *" TextColor="{StaticResource Medication_Font_Primary}" />
                <Entry Placeholder="e.g., Amlodipine"
                       Text="{Binding MedName}" />
            </VerticalStackLayout>

            <!-- Treated condition -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Treated condition"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Medication_Font_Primary}" />
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                    <Picker x:Name="ConditionPicker"
                            Grid.Column="0"
                            WidthRequest="180"
                            HeightRequest="40"
                            SelectedIndexChanged="OnConditionPickerChanged">
                        <Picker.Items>
                            <x:String>Select condition</x:String>
                            <x:String>Hypertension</x:String>
                            <x:String>Heart disease</x:String>
                            <x:String>Renal issue</x:String>
                            <x:String>Diabetes</x:String>
                            <x:String>Pain management</x:String>
                            <x:String>Allergy control</x:String>
                            <x:String>Infection</x:String>
                            <x:String>Other</x:String>
                        </Picker.Items>
                    </Picker>
                    <Entry x:Name="ConditionOtherEntry"
                           Grid.Column="1"
                           HeightRequest="40"
                           HorizontalOptions="FillAndExpand"
                           Placeholder="Details or other condition"
                           Text="{Binding Usage}"
                           IsEnabled="False" />
                </Grid>
            </VerticalStackLayout>

            <!-- Dose per time -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Dose per time" TextColor="{StaticResource Medication_Font_Primary}"
                       FontAttributes="Bold" />
                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="8">
                    <Entry Grid.Column="0"
                           WidthRequest="80"
                           HeightRequest="40"
                           Keyboard="Numeric"
                           Placeholder="1"
                           Text="{Binding Quantity}" />
                    <Picker Grid.Column="1"
                            x:Name="UnitPicker"
                            WidthRequest="130"
                            HeightRequest="40"
                            HorizontalOptions="Start"
                            SelectedItem="{Binding QuantityUnit}">
                        <Picker.Items>
                            <x:String>Select unit</x:String>
                            <x:String>tablet</x:String>
                            <x:String>capsule</x:String>
                            <x:String>mL</x:String>
                            <x:String>drop</x:String>
                            <x:String>puff</x:String>
                            <x:String>patch</x:String>
                            <x:String>other</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>
            </VerticalStackLayout>

            <!-- Schedule -->
            <VerticalStackLayout Spacing="8" Margin="0,8,0,0">
                <Label Text="Schedule" FontAttributes="Bold" TextColor="{StaticResource Medication_Font_Primary}" />
                <Label Text="Check days and set times per day." FontSize="12" TextColor="#78290F" />

                <!-- Time frequency selection - aligned with columns -->
