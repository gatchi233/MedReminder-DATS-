<?xml version="1.0" encoding="utf-8" ?>
<pages:AuthPage
    x:Name="Root"
    x:Class="MedReminder.Pages.Desktop.MedicationInventoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MedReminder.Pages"
    Title="Inventory">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="OnLogoutClicked" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid Padding="16" RowDefinitions="Auto,*" RowSpacing="12">

        <!-- Top bar -->
        <HorizontalStackLayout Spacing="10">
            <Button Text="Refresh" Command="{Binding RefreshCommand}" />
            <Button Text="Orders" Clicked="OnOrdersClicked" />
            <Button Text="Sort" Clicked="OnSortClicked" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               VerticalOptions="Center" />

            <Label Text="Low Stock = Stock â‰¤ Reorder"
                   Opacity="0.7"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Inventory list -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}">
            <CollectionView.EmptyView>
                <Label Text="No inventory items found."
                       Opacity="0.6"
                       VerticalOptions="Center" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12"
                            Margin="0,0,0,10"
                            BackgroundColor="White"
                            Stroke="LightGray"
                            StrokeThickness="1">

                        <Grid RowDefinitions="Auto,Auto"
                              ColumnDefinitions="*,Auto,Auto,Auto"
                              ColumnSpacing="10"
                              RowSpacing="8">

                            <!-- Row 0 -->
                            <Label Text="{Binding MedName}"
                                   FontSize="18"
                                   FontAttributes="Bold" />

                            <Label Grid.Column="1"
                                   Text="{Binding StockQuantity, StringFormat='Stock {0}'}"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="2"
                                   Text="{Binding ReorderLevel, StringFormat='Reorder {0}'}"
                                   Opacity="0.75"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center" />

                            <Grid Grid.Column="3" ColumnDefinitions="Auto,Auto" ColumnSpacing="8"
                                  HorizontalOptions="End" VerticalOptions="Center">

                                <!-- Low stock badge -->
                                <Border Padding="8,4"
                                        BackgroundColor="#F0AD4E"
                                        IsVisible="{Binding IsLowStock}"
                                        StrokeThickness="0">
                                    <Label Text="LOW"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           FontSize="12" />
                                </Border>

                                <!-- Adjust button -->
                                <Button Grid.Column="1"
                                        Text="Adjust"
                                        Clicked="OnAdjustClicked" />
                            </Grid>

                            <!-- Row 1 -->
                            <Label Grid.Row="1"
                                   Grid.ColumnSpan="3"
                                   Text="{Binding Usage}"
                                   Opacity="0.7" />

                            <Button Grid.Row="1"
                                    Grid.Column="3"
                                    Text="Order"
                                    Clicked="OnOrderClicked"
                                    HorizontalOptions="End" />
                        </Grid>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</pages:AuthPage>
