<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MedReminder.Pages.Desktop.ResidentReportPage"
    Title="Resident Report">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <HorizontalStackLayout>
                <Button Text="Close"
                        Clicked="OnCloseClicked"
                        HorizontalOptions="EndAndExpand"/>
            </HorizontalStackLayout>

            <Label Text="{Binding TitleText}"
                   FontSize="22"
                   FontAttributes="Bold"/>

            <Label Text="{Binding SubtitleText}"
                   FontSize="12"
                   Opacity="0.7"/>

            <Button Text="Share Report"
                    Command="{Binding ShareReportCommand}"/>

            <Label Text="Preview (HTML):"
                   FontAttributes="Bold"/>

            <Editor Text="{Binding HtmlPreview}"
                    AutoSize="TextChanges"
                    IsReadOnly="True"
                    FontFamily="Consolas"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
