<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MedReminder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MedReminder.Pages"
    xmlns:desktop="clr-namespace:MedReminder.Pages.Desktop">

    <!-- Login (NON-desktop page) -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate pages:LoginPage}" />


    <!-- Desktop main tabs -->
    <TabBar>

        <ShellContent
            Route="HomePage"
            Title="Home"
            ContentTemplate="{DataTemplate desktop:HomePage}" />

        <ShellContent
            Route="FloorPlanPage"
            Title="Floor Plan"
            ContentTemplate="{DataTemplate desktop:FloorPlanPage}" />

        <ShellContent
            Route="ResidentsPage"
            Title="Residents"
            ContentTemplate="{DataTemplate desktop:ResidentsPage}" />

        <ShellContent
            Route="MedicationInventoryPage"
            Title="Inventory"
            ContentTemplate="{DataTemplate desktop:MedicationInventoryPage}" />

        <ShellContent
            Route="StaffManagementPage"
            Title="Staff"
            ContentTemplate="{DataTemplate desktop:StaffManagementPage}" />


    </TabBar>

</Shell>
