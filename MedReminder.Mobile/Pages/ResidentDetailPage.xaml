<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MedReminder.Mobile.Pages.ResidentDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Resident">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="{Binding Resident.ResidentName}" FontSize="22" />
            <Label Text="{Binding Resident.Remarks}" Opacity="0.7" />

            <Label Text="Medications" FontSize="18" Margin="0,12,0,0" />

            <CollectionView ItemsSource="{Binding Medications}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="12" Spacing="2">
                            <!-- Adjust property names if needed -->
                            <Label Text="{Binding MedicationName}" FontSize="16" />
                            <Label Text="{Binding Dosage}" FontSize="12" Opacity="0.6" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
